<tool id="map_peaks" name="map_peaks" version="0.4.0">
  <description>Map MACS peaks to genomics annotations of the GarNet file</description>
  <requirements>
    <requirement type="package" version="0.4.0">garnet</requirement>
  </requirements>
  <command>
    GarNet
        -p $peaks_file
        -g $garnet_file
        -o .
  </command>
  <inputs>
    <!-- data -->
    <param name="peaks_file" type="data" format="bed" optional="false" label="peaks_file" help="BED file containing epigenetic regions of interest" />
    <param name="garnet_file" type="data" format="tabular" optional="false" label="garnet_file" help="TSV file containing genomics annotations" />
  </inputs>

  <outputs>
    <data name="transcription_factor_prizes" from_work_dir="" format="tabular" hidden="false" />
  </outputs>

  <help>

  </help>
  <!-- <citations><citation type="doi"></citation></citations> -->
</tool>
