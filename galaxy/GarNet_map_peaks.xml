<tool id="map_peaks" name="map_peaks" version="0.4.0">
  <description>Map MACS peaks to genomics annotations from the GarNet file</description>
  <requirements>
    <requirement type="package" version="0.4.0">garnet</requirement>
  </requirements>
  <command>
    GarNet
        -p $peaks_file
        -g $garnet_file
        -o OUTPUTDIR
  </command>
  <inputs>
    <!-- data -->
    <param name="peaks_file" type="data" type="bed" optional="true" label="" help="BED file containing epigenetic regions of interest" />
    <param name="garnet_file" type="data" type="tsv" optional="true" label="" help="TSV file containing genomics annotations" />
  </inputs>

  <outputs>
    <data name="" from_work_dir="output_dir/output_figures/-log10_P-value.png" hidden="false" />

  </outputs>
  <help>

  </help>
  <citations><citation type="doi"></citation></citations>
</tool>
