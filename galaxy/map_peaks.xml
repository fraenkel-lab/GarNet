<tool id="map_peaks" name="map_peaks" version="0.3.0">
  <description>Integrate Epigenetics and Transcriptomics data</description>
  <requirements>
    <requirement type="package" version="0.3.0">garnet</requirement>
  </requirements>
  <command>
    GarNet -p $peaks_file -db $garnet_file -o OUTPUTDIR
  </command>
  <inputs>
    <!-- data -->
    <param name="peaks_file" type="data" type="bed" optional="true" label="" help="BED file containing epigenetic regions of interest" />
    <param name="garnet_file" type="data" format="pickle" optional="true" label="" help="Reference genome genes and TF binding motifs, pre-processed by GarNet" />
  </inputs>

  <outputs>
    <data name="" from_work_dir="output_dir/..." hidden="false" />

  </outputs>
  <help>

  </help>
  <citations><citation type="doi"></citation></citations>
</tool>
